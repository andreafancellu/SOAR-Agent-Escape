sp {elaborate*reward_movement
   (state <s> ^name escape
              ^reward-link <r> #reward-link
              ^location <d-name> 
              ^direction <dir>) 
   (<dir> ^name <d-name> ^reward <d-reward>) 
-->
   (<r> ^reward <rr>) 
   (<rr> ^value <d-reward>)
}

sp {elaborate*reward_crafting
   (state <s> ^name escape
              ^reward-link <r> #reward-link
              ^combination <c>) 
   (<c> ^crafted yes ^reward <d-reward>) 
-->
   (<r> ^reward <rr>) 
   (<rr> ^value <d-reward>)
}

sp {elaborate*done
   (state <s> ^name escape
              ^location window_loc
              ^objects <ob1> <ob2> <ob3> <ob4> <ob5>
              ^combination <c>)
   (<ob1> ^name elastic ^taken yes)
   (<ob2> ^name twig ^taken yes)
   (<ob3> ^name stones ^taken yes)
   (<ob4> ^name trunk_2 ^taken yes)
   (<ob5> ^name trunk_1 ^taken yes)
   (<c> ^crafted yes)
-->
   (write (crlf) |Hai craftato un oggetto! |)
   (halt)
}