rl -s learning on # Reinforcement Llearning

sp {propose*initialize-escape
    (state <s> ^superstate nil 
              -^name)
-->
    (<s> ^operator <o> +)
    (<o> ^name initialize-escape)
    #(write |Proposed!|)
}

sp {apply*initialize-escape
    (state <s> ^operator <op>)
    (<op> ^name initialize-escape)
-->
    (<s> ^name escape
         ^height 1.5
         ^location start
         ^objects <el> <tw> <st> <tr1> <tr2>
         ^direction <d1> <d2> <d3> <d4> <d5> <d6>
         ^combination <sling> <stonetwig> <stonelastic>
         ^escaped no)
    
    
    (<d1> ^name window_loc ^item <wn> ^reward -0.5)
    (<d2> ^name elastic_loc ^item <el> ^reward -10)
    (<d3> ^name stones_loc ^item <st> ^reward -10)
    (<d4> ^name twig_loc ^item <tw> ^reward -10)
    (<d5> ^name trunk1_loc ^item <tr1> ^reward -10)
    (<d6> ^name trunk2_loc ^item <tr2> ^reward -10)

    (<sling> ^name sling ^item1 <el> ^item2 <tw> ^crafted no ^reward 1)
    (<stonetwig> ^name stonetwig ^item1 <st> ^item2 <tw> ^crafted no ^reward -1)
    (<stonelastic> ^name stonelastic ^item1 <st> ^item2 <el> ^crafted no ^reward -1)

    (<el> ^name elastic ^taken no ^used no) 
    (<tw> ^name twig ^taken no ^used no) # rametto
    (<st> ^name stones ^taken no ^used no) 
    (<tr1> ^name trunk_1 ^taken no ^height 1.0)   
    (<tr2> ^name trunk_2 ^taken no ^height 1.0)
    (<wn> ^name window ^height 3.5)
    
    (write |Initialized!|)
}

sp {htcompare*move*take 
   (state <s>  ^name escape) 
   (<s> ^operator <op-move> +) 
   (<s> ^operator <op-take> +) 
   (<op-move> ^name move)
   (<op-take> ^name take) 
-->
   (<s> ^operator <op-take> > <op-move>)
}

sp {htcompare*move*craft 
   (state <s>  ^name escape) 
   (<s> ^operator <op-move> +) 
   (<s> ^operator <op-craft> +) 
   (<op-move> ^name move)
   (<op-craft> ^name craft) 
-->
   (<s> ^operator <op-craft> > <op-move>)
}

sp {htcompare*take*craft 
   (state <s>  ^name escape) 
   (<s> ^operator <op-take> +) 
   (<s> ^operator <op-craft> +) 
   (<op-take> ^name take)
   (<op-craft> ^name craft) 
-->
   (<s> ^operator <op-take> > <op-craft>)
}

### Propose & Apply ### 
sp {propose*move
   (state <s> ^name escape
              ^direction <d> 
              ^location <from>)

   (<d> ^name <dir>)
   -(<d> ^name <from>)
-->
   (<s> ^operator <op> +) 
   (<op> ^name move 
         ^dir <dir>)
}

sp {apply*move
   (state <s> ^operator <op> 
              ^location <loc>)
   (<op> ^name move 
         ^dir <dir>)
-->
   (<s> ^location <loc> - <dir>) 
   (write (crlf) |Moved from: |<loc> | to: | <dir>)
}

sp {propose*craft
   (state <s> ^name escape
              ^combination <c>)
   (<c> ^item1 <item1> ^item2 <item2> ^crafted no)
   (<item1> ^taken yes ^used no)
   (<item2> ^taken yes ^used no)
-->
   (<s> ^operator <op> +) 
   (<op> ^name craft 
         ^combination <c>)
}

sp {apply*craft
   (state <s> ^name escape
              ^operator <op>)
   (<op> ^name craft 
         ^combination <c>)
   (<c> ^item1 <item1> ^item2 <item2>)        
-->
   (<c> ^crafted no - yes +)
   (<item1> ^used no - yes +)
   (<item2> ^used no - yes +)
   (write (crlf) |Crafted item:| <c>)
}

sp {propose*take
   (state <s> ^name escape
              ^location <loc>
              ^direction <dir>)
   
   (<dir> ^name <loc>
          ^item <item>)
   
   (<item> ^name <item_name> ^taken no)
   -(<item> ^name window)
-->
   (<s> ^operator <op> +)
   (<op> ^name take
         ^item <item>
         ^item_name <item_name>)
}

sp {apply*take
   (state <s> ^name escape
              ^operator <op>
              ^objects <obj>)
   (<op> ^name take 
         ^item <item>
         ^item_name <item_name>)  
   (<obj> ^name <item_name>)        
-->
   (<obj> ^taken no - yes +)
   (write (crlf) |Taken item:| <item_name>)
   #(<s> ^operator <op> -)
}

