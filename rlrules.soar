sp {propose*craft
   (state <s> ^name escape 
              ^tool <t>)
   (<t> ^name <toolname>
        ^created no)
-->
   (<s> ^operator <op>)
   (<op> ^name craft
         ^tool <toolname>)
}

sp {apply*craft
   (state <s> ^operator <op>)
   (<op> ^name craft
         ^tool <tool>)
-->
   (<s> ^tool <tool>)
   (<tool> ^created no - yes)
   (write (crlf) |Tool Created:| <tool>)
}



sp {rl*sling
   (state <s> ^name escape 
              ^operator <op> +) 
   (<op> ^name craft 
         ^tool sling) 
-->
   (<s> ^operator <op> = 0) 
}

sp {rl*stoneel
   (state <s> ^name escape 
              ^operator <op> +) 
   (<op> ^name craft 
         ^tool stoneel) 
-->
   (<s> ^operator <op> = 0) 
}

sp {rl*twigstone
   (state <s> ^name escape 
              ^operator <op> +) 
   (<op> ^name craft 
         ^tool twigstone) 
-->
   (<s> ^operator <op> = 0) 
}


sp {elaborate*reward*combination
   (state <s> ^name escape
         ^reward-link <r>
         ^operator <o> +)
   (<o> ^tool <t>)      
   (<t> ^created yes ^reward <d-reward>)
  -->
   (<r> ^reward <rr>)
   (<rr> ^value <d-reward>)
}

sp {elaborate*done_b
   (state <s> ^name escape
              ^tool <t>)
   (<t> ^created yes)
-->
   (halt) 
}


sp {propose*take
   (state <s> ^name escape
               ^object <el>
               ^location <loc>)
   (<loc> ^name elastic_loc)
   (<el> ^name elastic)
-->
   (<s> ^operator <op> +)
   (<op> ^name take
         ^item <el>)
}

sp {apply*take
   (state <s> ^name escape
               ^operator <op>
               ^location <loc>)
   (<loc> ^name elastic_loc)
   (<op> ^name take 
         ^item <el>)
-->
   (<s> ^bag <el>) 
   (write (crlf) |Taken: | <el>)
}

sp {rl*take
   (state <s> ^name escape 
              ^operator <op> +) 
   (<op> ^name take 
         ^item <item>) 
-->
   (<s> ^operator <op> = 0) 
}

sp {elaborate*reward_take
   (state <s> ^name escape
              ^reward-link <r> #reward-link
              ^bag <el> )
            
   (<el> ^name <e-name> ^reward <e-reward>) 
-->
   (<r> ^reward <rr>) 
   (<rr> ^value <e-reward>)
}